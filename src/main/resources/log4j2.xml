<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Appender para la consola -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>
                    %highlight{[  %level  ]} %highlight{[%d{yyyy-MM-dd HH:mm:ss}]} %highlight{[%c{1}]} : %msg%n
                </Pattern>
            </PatternLayout>
        </Console>

        <!-- Appender para el archivo -->
        <File name="File" fileName="logs/app.log" append="true">
            <PatternLayout pattern="[  %level]   [%d{yyyy-MM-dd HH:mm:ss}] [%c{1}] : %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger para el paquete de tu aplicación -->
        <Logger name="com.tmg.sensorcollector" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger raíz -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
